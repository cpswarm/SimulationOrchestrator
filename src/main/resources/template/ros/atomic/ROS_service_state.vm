#set($srv_tag = $service_content.getElementsByTagName("srv").item(0))
	${indent}smach_ros.ServiceState('$name_tag.getFirstChild().getNodeValue()',
	#if($request_tag.getAttributes().item(0).getNodeValue() == "empty")
		${indent}$srv_tag.getFirstChild().getNodeValue())#if($continue),#end
	#elseif($request_tag.getAttributes().item(0).getNodeValue() == "fixed")
		${indent}$srv_tag.getFirstChild().getNodeValue(),
		#set($param_list = $goal_tag.getElementsByTagName("param"))
		#set($last = $param_list.getLength() - 1)
		#set($request = ${service_content.item(1).getFirstChild().getNodeValue()} + 'Request(')
		${indent}request=$request#foreach($i in [0..$last])
