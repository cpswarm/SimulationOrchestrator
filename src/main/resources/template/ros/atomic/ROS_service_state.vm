		${indent}$srv_tag.getFirstChild().getNodeValue(),
		#set($var_list = $goal_tag.getElementsByTagName("var"))
		#set($last = $var_list.getLength() - 1)
		${indent}request_slots=[#foreach($i in [0..$last])
			#if($i == $last)'$var_list.item($i).getFirstChild().getNodeValue()'])#if($continue),#end#else'$var_list.item($i).getFirstChild().getNodeValue()', #end
		#end
	#elseif($request_tag.getAttributes().item(0).getNodeValue() == "callback")
		${indent}$srv_tag.getFirstChild().getNodeValue(),
		${indent}request_cb=$srv_tag.getFirstChild().getNodeValue().toLowerCase()_cb)#if($continue),#end
	#end